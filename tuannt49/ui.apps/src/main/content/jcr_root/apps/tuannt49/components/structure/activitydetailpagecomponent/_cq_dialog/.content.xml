<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v2.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties,tuannt49.activitypage]"
    mode="edit">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <activity
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Activities"
                        sling:orderBefore="socialmedia"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Activities Properties"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <iconType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                fieldLabel="Icon Type Property"
                                                name="./iconType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <horseRiding
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Horse Riding"
                                                        value="horseRiding"/>
                                                    <golf
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Golf"
                                                        value="golf"/>
                                                    <activityChildren
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Activity Children"
                                                        value="activityChildren"/>
                                                    <cure
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Cure"
                                                        value="cure"/>
                                                    <casino
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Casino"
                                                        value="casino"/>
                                                    <gastronomy
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Gastronomy"
                                                        value="gastronomy"/>
                                                </items>
                                            </iconType>
                                            <siteName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Site Name"
                                                name="./siteName"
                                                required="{Boolean}true"/>
                                            <siteTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Site Title"
                                                name="./siteTitle"
                                                required="{Boolean}true"/>
                                            <siteDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Site Description"
                                                name="./siteDescription"/>
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Choose Image"
                                                name="./image"
                                                rootPath="/content/dam/tuannt49/"/>
                                        </items>
                                    </section>
                                </items>
                            </column>
                        </items>
                    </activity>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>

<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
        xmlns:cq="http://www.day.com/jcr/cq/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        jcr:primaryType="nt:unstructured"
        jcr:title="Page"
        sling:resourceType="cq/gui/components/authoring/dialog"
        extraClientlibs="[cq.common.wcm,core.wcm.components.page.v2.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties]"
        helpPath="https://www.adobe.com/go/aem_cmp_page_v2"
        mode="edit"
        trackingFeature="core-components:page:v2">
    <content
            granite:class="cq-dialog-content-page"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    granite:class="cq-siteadmin-admin-properties-tabs"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    size="L">
                <items jcr:primaryType="nt:unstructured">
                    <activity
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Activities"
                            sling:orderBefore="socialmedia"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Activities Properties"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <static
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    fieldDescription="These items are statically loaded in the dialog."
                                                    fieldLabel="Static Select"
                                                    name="./static">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <gov
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Gov"
                                                            value="gov" />
                                                    <media
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Media"
                                                            value="media" />
                                                    <outdoors
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Outdoors"
                                                            value="outdoors" />
                                                    <mobile
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Mobile"
                                                            value="mobile" />
                                                </items>
                                            </static>
                                            <siteName
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Site Name"
                                                    name="./siteName"
                                                    required="{Boolean}true" />
                                            <siteTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Site Title"
                                                    name="./siteTitle"
                                                    required="{Boolean}true" />
                                            <siteDescription
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Site Description"
                                                    name="./siteDescription" />
                                            <image
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Choose Image"
                                                    name="./image"
                                                    rootPath="/content/dam/tuannt49/" />
                                        </items>
                                    </section>
                                </items>
                            </column>
                        </items>
                    </activity>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>